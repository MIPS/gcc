# The default build is mips32r6, hard-float big-endian.
# A multilib for mips32r6+LE
# A multilib for mips64r6
# A multilib for mips64r6+LE
# A multilib for mips32r6+LE+singlefloat+shortdouble

MULTILIB_OPTIONS = mips64r6 mmicromips mabi=32/mabi=n32/mabi=64 EL msoft-float/msingle-float fshort-double mclib=small/mclib=tiny
MULTILIB_DIRNAMES = mips64r6 micromips 32 n32 64 el sof sgl short small tiny
MULTILIB_MATCHES = EL=mel EB=meb

MULTILIB_EXCLUSIONS = !mips64r6/!mmicromips/!mabi=32/!mabi=n32/!mabi=64/!EL/!msoft-float/!msingle-float/!fshort-double/!mclib=small/!mclib=tiny

MULTILIB_REQUIRED = mabi=32
MULTILIB_REQUIRED += mabi=32/EL
MULTILIB_REQUIRED += mabi=32/msoft-float
MULTILIB_REQUIRED += mabi=32/EL/msoft-float
MULTILIB_REQUIRED += mabi=32/EL/mclib=small
MULTILIB_REQUIRED += mabi=32/EL/mclib=tiny
MULTILIB_REQUIRED += mabi=32/EL/msoft-float/mclib=small
MULTILIB_REQUIRED += mabi=32/EL/msoft-float/mclib=tiny
MULTILIB_REQUIRED += mabi=32/EL/msingle-float/fshort-double
MULTILIB_REQUIRED += mmicromips/mabi=32/EL
MULTILIB_REQUIRED += mmicromips/mabi=32/EL/msoft-float
MULTILIB_REQUIRED += mmicromips/mabi=32/EL/mclib=small
MULTILIB_REQUIRED += mmicromips/mabi=32/EL/mclib=tiny
MULTILIB_REQUIRED += mmicromips/mabi=32/EL/msoft-float/mclib=small
MULTILIB_REQUIRED += mmicromips/mabi=32/EL/msoft-float/mclib=tiny
MULTILIB_REQUIRED += mips64r6/mabi=n32
MULTILIB_REQUIRED += mips64r6/mabi=n32/EL
MULTILIB_REQUIRED += mips64r6/mabi=n32/msoft-float
MULTILIB_REQUIRED += mips64r6/mabi=n32/EL/msoft-float
MULTILIB_REQUIRED += mips64r6/mabi=64
MULTILIB_REQUIRED += mips64r6/mabi=64/EL
MULTILIB_REQUIRED += mips64r6/mabi=64/msoft-float
MULTILIB_REQUIRED += mips64r6/mabi=64/EL/msoft-float

MULTILIB_REUSE = mabi.32=mips64r6/mabi.32
MULTILIB_REUSE += mabi.32/EL=mips64r6/mabi.32/EL
MULTILIB_REUSE += mabi.32/msoft-float=mips64r6/mabi.32/msoft-float
MULTILIB_REUSE += mabi.32/EL/msoft-float=mips64r6/mabi.32/EL/msoft-float
MULTILIB_REUSE += mabi.32/EL/mclib.small=mips64r6/mabi.32/EL/mclib.small
MULTILIB_REUSE += mabi.32/EL/mclib.tiny=mips64r6/mabi.32/EL/mclib.tiny
MULTILIB_REUSE += mabi.32/EL/msoft-float/mclib.small=mips64r6/mabi.32/EL/msoft-float/mclib.small
MULTILIB_REUSE += mabi.32/EL/msoft-float/mclib.tiny=mips64r6/mabi.32/EL/msoft-float/mclib.tiny
