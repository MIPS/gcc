# The default build is mips32r6, hard-float big-endian.  Add mips64r6,
# 64-bit ABI and little-endian variations.

MULTILIB_OPTIONS = mips64r6 mmicromips mabi=32/mabi=n32/mabi=64 EL
MULTILIB_DIRNAMES = mips64r6 micromips 32 n32 64 el
MULTILIB_MATCHES = EL=mel EB=meb

MULTILIB_EXCLUSIONS = !mips64r6/!mmicromips/!mabi=32/!mabi=n32/!mabi=64/!EL

MULTILIB_REQUIRED   = mabi=32
MULTILIB_OSDIRNAMES = mabi.32=!mips-r6-hard/lib
MULTILIB_REUSE      = mabi.32=mips64r6/mabi.32
MULTILIB_REQUIRED   += mips64r6/mabi=n32
MULTILIB_OSDIRNAMES += mips64r6/mabi.n32=!mips-r6-hard/lib32
MULTILIB_REQUIRED   += mips64r6/mabi=64
MULTILIB_OSDIRNAMES += mips64r6/mabi.64=!mips-r6-hard/lib64

MULTILIB_REQUIRED   += mabi=32/EL
MULTILIB_OSDIRNAMES += mabi.32/EL=!mipsel-r6-hard/lib
MULTILIB_REUSE      += mabi.32/EL=mips64r6/mabi.32/EL
MULTILIB_REQUIRED   += mips64r6/mabi=n32/EL
MULTILIB_OSDIRNAMES += mips64r6/mabi.n32/EL=!mipsel-r6-hard/lib32
MULTILIB_REQUIRED   += mips64r6/mabi=64/EL
MULTILIB_OSDIRNAMES += mips64r6/mabi.64/EL=!mipsel-r6-hard/lib64

# No big endian micromips
MULTILIB_REQUIRED   += mmicromips/mabi=32/EL
MULTILIB_OSDIRNAMES += mmicromips/mabi.32/EL=!micromipsel-r6-hard/lib
